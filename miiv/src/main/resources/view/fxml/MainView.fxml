<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox>
            <MenuBar fx:id="menuBar">
                <Menu text="File">
                    <MenuItem fx:id="menuItemExit" text="Exit" />
                </Menu>
                <Menu text="Edit">
                    <!-- Edit menu items -->
                </Menu>
                <Menu text="View">
                    <!-- View menu items -->
                </Menu>
                <!-- Additional menus -->
            </MenuBar>
            <ToolBar fx:id="toolBar">
                <Button fx:id="buttonCopy" text="Copy" />
                <Button fx:id="buttonMove" text="Move" />
                <Button fx:id="buttonDelete" text="Delete" />
                <!-- Additional function buttons -->
            </ToolBar>
        </VBox>
    </top>
    <center>
        <SplitPane fx:id="splitPane" dividerPositions="0.5">
            <items>
                <AnchorPane>
                    <TableView fx:id="leftTable" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                        <columns>
                            <TableColumn fx:id="leftNameColumn" text="Name" />
                            <TableColumn fx:id="leftSizeColumn" text="Size" />
                            <!-- More columns as needed -->
                        </columns>
                    </TableView>
                </AnchorPane>
                <AnchorPane>
                    <TableView fx:id="rightTable" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                        <columns>
                            <TableColumn fx:id="rightNameColumn" text="Name" />
                            <TableColumn fx:id="rightSizeColumn" text="Size" />
                            <!-- More columns as needed -->
                        </columns>
                    </TableView>
                </AnchorPane>
            </items>
        </SplitPane>
    </center>
    <bottom>
        <HBox>
            <Label fx:id="statusLabel" text="Status: Ready" />
            <!-- Additional status information -->
        </HBox>
    </bottom>
</BorderPane>
